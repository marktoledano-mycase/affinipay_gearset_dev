<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <constants>
        <name>conCaseOriginisEmailLawPay</name>
        <dataType>String</dataType>
        <value>
            <stringValue>Email (LawPay)</stringValue>
        </value>
    </constants>
    <constants>
        <name>conCaseOriginisEmailMyCase</name>
        <dataType>String</dataType>
        <value>
            <stringValue>Email (MyCase)</stringValue>
        </value>
    </constants>
    <constants>
        <name>conCaseRecordTypeLawPay</name>
        <dataType>String</dataType>
        <value>
            <stringValue>LawPay</stringValue>
        </value>
    </constants>
    <constants>
        <name>conCaseRecordTypeMCBilling</name>
        <dataType>String</dataType>
        <value>
            <stringValue>Billing - MyCase</stringValue>
        </value>
    </constants>
    <constants>
        <name>conLawPayRecordTypeID</name>
        <dataType>String</dataType>
        <value>
            <stringValue>0128W000000RjtmQAC</stringValue>
        </value>
    </constants>
    <constants>
        <name>conLawPaySupportQueue</name>
        <dataType>String</dataType>
        <value>
            <stringValue>00G8W000003uCJfUAM</stringValue>
        </value>
    </constants>
    <constants>
        <name>conMCBillingRecordTypeID</name>
        <dataType>String</dataType>
        <value>
            <stringValue>0128W000001DllKQAS</stringValue>
        </value>
    </constants>
    <constants>
        <name>conMyCaseBillingQueueID</name>
        <dataType>String</dataType>
        <value>
            <stringValue>00G8W0000045bebUAA</stringValue>
        </value>
    </constants>
    <constants>
        <name>conSubject_is_LPP_Payments</name>
        <dataType>String</dataType>
        <value>
            <stringValue>LPP Payments</stringValue>
        </value>
    </constants>
    <decisions>
        <name>Check_Record_Type</name>
        <label>Check Record Type</label>
        <locationX>314</locationX>
        <locationY>335</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Assign_MyCase_Billing_Record_Type</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordTypeId</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>conMCBillingRecordTypeID</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Origin</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>conCaseOriginisEmailMyCase</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.OwnerId</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>conMyCaseBillingQueueID</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Subject</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference>conSubject_is_LPP_Payments</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>MCBilling</targetReference>
            </connector>
            <label>Assign MyCase Billing Record Type</label>
        </rules>
        <rules>
            <name>Assign_LawPay_Record_Type</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.RecordTypeId</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>conLawPayRecordTypeID</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Origin</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>conCaseOriginisEmailLawPay</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.OwnerId</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>conLawPaySupportQueue</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_LawPay_Record_Type_ID</targetReference>
            </connector>
            <label>Assign LawPay Record Type</label>
        </rules>
    </decisions>
    <description>Currently: this flow updates the case record type from MC Support to MC Billing when the case owner is the Billing Queue.</description>
    <environments>Default</environments>
    <interviewLabel>Case: Update Case Record Type {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Case: Update Case Record Type on Ownership Change</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_record_type_to_LawPay</name>
        <label>Update record type to LawPay</label>
        <locationX>314</locationX>
        <locationY>575</locationY>
        <inputAssignments>
            <field>RecordTypeId</field>
            <value>
                <elementReference>varLawPayRecordTypeID</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_the_Case_Record_Type</name>
        <label>Update the Case Record Type</label>
        <locationX>50</locationX>
        <locationY>575</locationY>
        <inputAssignments>
            <field>RecordTypeId</field>
            <value>
                <elementReference>varMCBillingRecordType</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>188</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_Record_Type</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>OwnerId</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Case</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Get_LawPay_Record_Type_ID</name>
        <label>Get LawPay Record Type ID</label>
        <locationX>314</locationX>
        <locationY>455</locationY>
        <connector>
            <targetReference>Update_record_type_to_LawPay</targetReference>
        </connector>
        <flowName>Function_Get_RecordTypeId</flowName>
        <inputAssignments>
            <name>varDevName</name>
            <value>
                <stringValue>LawPay</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>varObject</name>
            <value>
                <stringValue>Case</stringValue>
            </value>
        </inputAssignments>
        <outputAssignments>
            <assignToReference>varLawPayRecordTypeID</assignToReference>
            <name>RecordTypeId</name>
        </outputAssignments>
    </subflows>
    <subflows>
        <name>MCBilling</name>
        <label>MCBilling</label>
        <locationX>50</locationX>
        <locationY>455</locationY>
        <connector>
            <targetReference>Update_the_Case_Record_Type</targetReference>
        </connector>
        <flowName>Function_Get_RecordTypeId</flowName>
        <inputAssignments>
            <name>varDevName</name>
            <value>
                <stringValue>MCBilling</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>varObject</name>
            <value>
                <stringValue>Case</stringValue>
            </value>
        </inputAssignments>
        <outputAssignments>
            <assignToReference>varMCBillingRecordType</assignToReference>
            <name>RecordTypeId</name>
        </outputAssignments>
    </subflows>
    <variables>
        <name>varCaseOwner</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <value>
            <stringValue></stringValue>
        </value>
    </variables>
    <variables>
        <name>varLawPayRecordTypeID</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <name>varMCBillingRecordType</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <value>
            <stringValue></stringValue>
        </value>
    </variables>
</Flow>
