<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <decisions>
        <name>New_or_Updated_Opportunity</name>
        <label>New or Updated Opportunity</label>
        <locationX>490</locationX>
        <locationY>335</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>New_with_Qual_Rep</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Qualifying_Rep__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record__Prior.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Qualifying_Rep_Role</targetReference>
            </connector>
            <label>New with Qual Rep</label>
        </rules>
        <rules>
            <name>New_without_Qual_Rep</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Qualifying_Rep__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Qualifying_Rep_and_Role</targetReference>
            </connector>
            <label>New without Qual Rep</label>
        </rules>
        <rules>
            <name>Re_Populate_Qual_Rep</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Qualifying_Rep__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record__Prior.Qualifying_Rep__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Qualifying_Rep__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Qualifying_Rep_and_Role</targetReference>
            </connector>
            <label>Re-Populate Qual Rep</label>
        </rules>
        <rules>
            <name>Updated_Qual_Rep</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.Qualifying_Rep__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Record.Qualifying_Rep__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <isGoTo>true</isGoTo>
                <targetReference>Update_Qualifying_Rep_Role</targetReference>
            </connector>
            <label>Updated Qual Rep</label>
        </rules>
    </decisions>
    <description>Condition 1: Converted Leads will be examined to ensure a Qualifying Rep Role name
Condition 2: New Opportunities without a Qualifying Rep will be stamped with the Opportunity Owner as the Qualifying Rep &amp; Role name
Condition 3: Changes to the Qualifying Rep will change the Qualifying Rep Role as well</description>
    <environments>Default</environments>
    <interviewLabel>Opportunity: Populate Qualifying Rep Role {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity: Populate Qualifying Rep &amp; Role</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Set_Qualifying_Rep_and_Role</name>
        <label>Set Qualifying Rep and Role</label>
        <locationX>490</locationX>
        <locationY>791</locationY>
        <inputAssignments>
            <field>Qualifying_Rep_Role__c</field>
            <value>
                <elementReference>$Record.Owner.UserRole.Name</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Qualifying_Rep__c</field>
            <value>
                <elementReference>$Record.OwnerId</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_Qualifying_Rep_Role</name>
        <label>Update Qualifying Rep Role</label>
        <locationX>50</locationX>
        <locationY>455</locationY>
        <inputAssignments>
            <field>Qualifying_Rep_Role__c</field>
            <value>
                <elementReference>$Record.Qualifying_Rep__r.UserRole.Name</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>364</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>New_or_Updated_Opportunity</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Bypass_VR_and_Automation__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>Opportunity</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
