<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <decisions>
        <name>Outreach_Last_Touch_Sequence_Criteria_w_Contact_Role</name>
        <label>Outreach - Last Touch Sequence Criteria (w/ Contact Role)</label>
        <locationX>840</locationX>
        <locationY>383</locationY>
        <defaultConnectorLabel>Invalid Criteria, Do Not Push Sequence Data to Opp</defaultConnectorLabel>
        <rules>
            <name>Valid_Criteria_for_Pushing_Sequence_Information_to_Opportunity</name>
            <conditionLogic>1 AND 2 AND (3 OR 4)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Opportunity.Outreach_Last_Touch_Contact__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Opportunity.Outreach_Last_Touch_Sequence__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Contact.Outreach_Current_Sequence_Name__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Contact.Outreach_Finished_Sequences__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Finished_Sequences_Last_Touch_Sequence</targetReference>
            </connector>
            <label>Valid Criteria for Pushing Sequence Information to Opportunity</label>
        </rules>
    </decisions>
    <description>When a Primary Opportunity Contact Role is created or updated, check the Opportunity and, if applicable, attribute Outreach Sequence data to the Opportunity record.</description>
