    <description>Creates a product environment record when a merchant application is set to provisioned</description>
    <environments>Default</environments>
    <formulas>
        <name>f_Account</name>
        <dataType>String</dataType>
        <expression>IF(
    NOT(ISBLANK({!$Record.Opportunity__c})),
    {!$Record.Opportunity__r.AccountId},
    IF(
        NOT(ISBLANK({!$Record.Account__c})),
        {!$Record.Account__c},
        &quot;&quot;
    )
)</expression>
    </formulas>
    <formulas>
        <name>f_PE_Record_Name</name>
        <dataType>String</dataType>
        <expression>LEFT({!$Record.Merchant_Name__c}, 78 - LEN({!$Record.Merchant_App_ID__c}) - 3) &amp; &quot; - &quot; &amp; {!$Record.Merchant_App_ID__c}</expression>
    </formulas>
