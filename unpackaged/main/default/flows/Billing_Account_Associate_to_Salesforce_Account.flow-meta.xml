        <name>OpportunityQuery</name>
        <isViewedAsPlainText>true</isViewedAsPlainText>
        <text>SELECT Id, AccountId, Product_Environment__c, Primary_Contact__c, Record_Type_Name__c, CloseDate, CreatedDate 
FROM Opportunity 
WHERE 
IsClosed = false AND 
Primary_Contact__r.Email = &#39;{!$Record.Bill_To_Email__c}&#39; AND 
Record_Type_Name__c = &#39;MyCase&#39;</text>
