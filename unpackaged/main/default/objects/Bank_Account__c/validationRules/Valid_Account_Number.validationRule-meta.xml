<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_Account_Number</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(Regex(AccountNo__c, &quot;^[0-9]{4,17}$&quot;))</errorConditionFormula>
    <errorDisplayField>AccountNo__c</errorDisplayField>
    <errorMessage>Please enter a valid account number.</errorMessage>
</ValidationRule>
