                <type>user</type>
            </approver>
            <approver>
                <name>ann.cowell@mycase.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>benjamin.quagliani@mycase.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>elinderman@casepeer.com.newco</name>
                <type>user</type>
            </approver>
            <approver>
                <name>gia.ippolito@mycase.com.newco</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mandy.radtke@affinipay.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>matt.horne@mycase.com.newco</name>
                <type>user</type>
            </approver>
            <approver>
                <name>maya.tharakan@mycase.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>terence.falk@mycase.com.newco</name>
                <type>user</type>
            </approver>
            <approver>
                <name>valerie.amparan@mycase.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <description>Manager approval for Billing cases</description>
    <emailTemplate>Automated_Emails_Do_Not_Use/Billing_Adjustment_Case_Approval_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Billing - MyCase</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Case_Sub_Reason__c</field>
            <operation>equals</operation>
            <value>Refund/Credit</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.LastName</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>notEqual</operation>
            <value>Ready for Processing,Awaiting Approval</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.IsClosed</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Owner_Mycase_Billing_Queue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Ready_for_Processing</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Status_Approval_Denied</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Status_Awaiting_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>MyCase Refund/Credit</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_to_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
